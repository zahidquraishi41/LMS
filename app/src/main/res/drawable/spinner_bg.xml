<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="4dp" android:left="15dp" android:right="30dp" android:top="4dp" />
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#B0B0B2" />
                </shape>
            </item>

            <item>
                <bitmap android:src="@drawable/down_arrow" android:gravity="center|right" />
            </item>

            <item>
                <bitmap android:src="@drawable/department" android:gravity="center|left" />
            </item>

        </layer-list>

    </item>

</selector>